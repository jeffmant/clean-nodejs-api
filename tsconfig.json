{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [ "node_modules" ]
}